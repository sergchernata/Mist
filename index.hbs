{{!< default}}

<main class="main_mist" role="main">

{{#foreach posts}}
    <article class="article_mist" role="article" itemscope itemtype="http://schema.org/Article">
        <header class="postheader_mist">
            <time class="date_mist" datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished">{{date format='dddd DD MMM YYYY'}}</time>
            <h1 class="posttitle_uber" itemprop="headline"><a href="{{{url}}}" rel="bookmark">{{title}}</h1>
        </header>
        <div class="postcontent_uber" itemprop="articleBody">
            {{content}}
        </div>
        <div class="posttags_uber">
            {{#if tags}}
                Tags: {{tags separator=" | "}}
            {{/if}}
        </div>
    </article>
{{/foreach}}
<div class="pagination_uber">
    {{#if pagination}}
        {{{pagination}}}
    {{/if}}
</div>

</main>